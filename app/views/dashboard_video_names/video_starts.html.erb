<%= provide(:title, 'Video Starts') %>
<h1>Video Starts</h1>

<div class="button-nav">
	<%= link_to "Back to dashboard home", dashboard_trended_metrics_path, class: "btn btn-large btn-primary" %>
</div>

<%  date = nil
    @dashboard_video_names.each do |dv|
      if date != dv.start_date
        if !date.nil?
          table_hdr = "30 Days Prior" %>
    </table>
</div>
<%      else
          table_hdr = "Last 30 Days"
        end
        date = dv.start_date %>
<div style="width: 50%; float: left;">
	<h3><%= table_hdr %> (<%= date.strftime("%-m/%-d/%Y") %> - <%= (dv.start_date + 29).strftime("%-m/%-d/%Y") %>)</h3>
	<table class="data" cellpadding="0" cellspacing="0" border="0" style="width: 95%">
		<tr>
			<th>Video Name</th>
			<th>Video Starts</th>
		</tr>
<%    end %>
		<tr>
			<td ><%= dv.name %></td>
			<td><%= dv.video_starts %></td>
		</tr>
<%  end %>
	</table>
</div>

<div class="button-nav">
	<%= link_to "Back to dashboard home", dashboard_trended_metrics_path, class: "btn btn-large btn-primary" %>
</div>