<div class="row">
	<div class="span6 offset3">
		<%= form_for(@cloud_match) do |f| %>
			<%= render 'shared/error_messages', obj:@cloud_match %>

			<div class="field">
				<%= f.label :cloud_id %>
			    <%= f.select :cloud_id, Cloud.order(:name).collect {|c| [ c.name, c.id ] }, {:include_blank => "Please choose one"} %>
			</div>
			<div class="field">
				<%= f.label 'Match list (put each on a new line)' %>
				<%= f.text_area :match_list %>
			</div>
			
			<div class="actions">
				<%= f.submit lbl, class:'btn btn-large btn-primary' %>
			</div>
		<% end %>
	</div>
</div>