<div class="row">
	<div class="span6 offset3">
		<%= form_for(@brand_match) do |f| %>
			<%= render 'shared/error_messages', obj:@brand_match %>

			<div class="field">
				<%= f.label 'Match list (put each on a new line)' %>
				<%= f.text_area :match_list %>
			</div>
			<div class="field">
				<%= f.label 'Exclude list (put each on a new line)' %>
				<%= f.text_area :exclude_list %>
			</div>
			<div class="actions">
				<%= f.submit lbl, class:'btn btn-large btn-primary' %>
			</div>
		<% end %>
	</div>
</div>